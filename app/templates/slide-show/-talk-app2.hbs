<div class="title">Let's make an app!</div>
<div class="subtitle">Slidr</div>
<div class="content">
    {{code-block "ember new slidr #creates the app/directory"}}
    {{code-block "cd slidr"}}
    {{code-block "ember install:npm ember-slide-show #install the addon"}}
    {{code-block "ember generate ember-slide-show #this applies the blueprint"}}
    {{code-block "ember g route application #create the app route"}}
    {{code-block "ember g controller application #create the app controller"}}
    {{code-block "ember g slide slide1 #create a slide"}}
    {{code-block "ember g slide slide2"}}
    {{code-block "ember g slide slide3"}}
    {{code-block "ember serve #serves the app on port 4200"}}
    <div class="center"><a href="http://localhost:4200">http://localhost:4200</a></div>
</div>